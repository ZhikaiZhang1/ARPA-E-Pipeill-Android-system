        <!-- Column Headers -->
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textStyle="bold"
                android:padding="8dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ESP32-1"
                android:textStyle="bold"
                android:padding="8dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ESP32-2"
                android:textStyle="bold"
                android:padding="8dp" />
        </TableRow>

        <!-- Syncing Status Row -->
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Syncing Status"
                android:padding="8dp" />
            <TextView
                android:id="@+id/syncStatusESP32_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Not Synced"
                android:padding="8dp" />
            <TextView
                android:id="@+id/syncStatusESP32_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Not Synced"
                android:padding="8dp" />
        </TableRow>

        <!-- Download Percentage Row -->
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Download %"
                android:padding="8dp" />
            <TextView
                android:id="@+id/downloadPercentageESP32_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0%"
                android:padding="8dp" />
            <TextView
                android:id="@+id/downloadPercentageESP32_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0%"
                android:padding="8dp" />
        </TableRow>

        <!-- Mode Row -->
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mode"
                android:padding="8dp" />
            <TextView
                android:id="@+id/modeESP32_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Idle"
                android:padding="8dp" />
            <TextView
                android:id="@+id/modeESP32_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Idle"
                android:padding="8dp" />
        </TableRow>

    </TableLayout>
</RelativeLayout>
